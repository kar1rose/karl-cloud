                <artifactId>core-utils</artifactId>
                <version>1.0-SNAPSHOT</version>
            </dependency>
            <!--spring cloud依赖-->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
